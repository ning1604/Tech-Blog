<div class="all-post">
    {{#each posts as |post|}}
    <div class="center user-post">
        <button class="btn">
            <div>
                {{post.title}}
            </div>
            <div>
                {{format_date post.date_created}}
            </div>
        </button>
    </div>
    {{/each}}
</div>

<div class="container hidden">
    <div class="container-header">
        <h2 class="new-post-heading">Create New Post</h2>
    </div>
    <div class="container-content">
        <form class="new-post-form">
            <div class="form-group">
                <label for="post-title">Title</label>
                <input class="form-input" type="text" id="post-title" />
            </div>
            <div class="form-group">
                <label for="post-content">Content</label>
                <textarea class="form-input" id="post-content"></textarea>
            </div>
            <div class="form-group">
                <button class="btn" type="submit">Create</button>
            </div>
        </form>
    </div>
</div>
<div class="center btn-position-btm">
    <button class="new-post-btn">+ New Post</button>
</div>