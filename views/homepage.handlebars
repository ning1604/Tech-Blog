<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="blog-post">
    <div class="post-header">
        <h2>{{post.title}}</h2>
        <h3 class="post-date">Posted by {{post.user.username}} on {{format_date post.date_created}}</h3>
    </div>
    <div class="post">
        <p>{{post.content}}</p>
    </div>
</div>
{{/each}}