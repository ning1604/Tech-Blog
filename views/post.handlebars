<div class="container">
    <div class="container-header">
        <a>{{title}}</a>
        <h3 class="container-date">Posted by {{user.username}} on {{format_date date_created}}</h3>
    </div>
    <div class="container-content">
        <p>{{content}}</p>
    </div>
</div>

{{#each comments as |comment|}}
<div class="container">
    <div class="container-header"><a class="no-vis">header</a></div>
    <div class="container-content">
        <p>{{comment.comment_content}}</p>
        <p>	&#8212 {{comment.user.username}}, {{format_date comment.date_created}}</p>
    </div>
</div>
{{/each}}

{{#unless logged_in}}
<div class="center btn-position-btm">
    <a  href="/login" class="new-post-btn">Leave a Comment</a>
</div>
{{/unless}}

{{#if logged_in}}
<div class="container">
    <div class="container-header"><a class="no-vis">header</a></div>
    <div class="container-content">
        <form class="new-comment-form">
            <div class="form-group">
                <label for="comment-content">Comment</label>
                <textarea class="form-input" id="comment-content"></textarea>
            </div>
            <div class="form-group">
                <button class="btn" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/comment.js"></script>
{{/if}}
